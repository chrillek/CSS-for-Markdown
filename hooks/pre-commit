#/usr/bin/env /bin/zsh 

startDir="/Users/ck/Develop/websites"
mdDir="CSS-for-Markdown"
fullDir="$startDir/$mdDir"
archive="$mdDir/Using CSS.zip"
mdFile="$mdDir/Using CSS.md"
cssFile="$mdDir/styles.css"
pdfFile="Using CSS.pdf"
(cd $startDir; rm "$archive"; find $mdDir/images -name "*.png" -print0 | xargs -0 zip "$archive"; zip "$archive" "$mdFile" "$cssFile")
(cd "$fullDir";  git add -u "Using CSS.zip")

cp "$startDir/$archive" /tmp
(cd /tmp ; unzip "Using CSS.zip")

# The archive is unpacked in /tmp/CSS-for-Markdown now

# Now the archive is ready. Build the PDF from it using DEVONthink
## Doesn't work yet due to a bug in DT's JXA binding

 (cd $startDir;  osascript -l JavaScript "$mdDir/buildPDF.js" /tmp/Markdown-for-CSS 'Using CSS' "$fullDir"; cd "$mdDir" ; git add -u "$pdfFile" )

 rm "/tmp/Using CSS.zip"